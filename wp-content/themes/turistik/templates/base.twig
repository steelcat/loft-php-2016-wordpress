<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
  <head>
    <meta charset="{{site.charset}}" />
    <title>
      {% if wp_title %}
        {{ wp_title }} - {{ site.name }}
      {% else %}
        {{ site.name }}
      {% endif %}
    </title>
    <meta name="description" content="{{site.description}}">
    {{ fn('wp_head') }}
  </head>
  <body class="{{ body_class }}" data-template="base.twig">
    <div class="wrapper">
      <header class="main-header">
        <div class="top-header">
          <div class="top-header__wrap">
            <div class="logotype-block">
              <div class="logo-wrap"><a href="/"><img src="{{theme.link}}/img/logo.svg" alt="Логотип" class="logo-wrap__logo-img"></a></div>
            </div>
            <nav class="main-navigation">
              <ul class="nav-list">
                {% for item in menu.items %}
                  <li class="nav-list__nav-item">
                    <a class="nav-list__nav-item__nav-link" href="{{item.url}}">{{item.name}}</a>
                  </li>
                {% endfor %}
              </ul>
            </nav>
          </div>
        </div>
        <div class="bottom-header">
          <div class="search-form-wrap">
            <form class="search-form">
              <input placeholder="Поиск..." class="search-form__input" type="text">
              <button class="search-form__btn-search"><i class="icon icon-search"></i></button>
            </form>
          </div>
        </div>
      </header>
      <div class="main-content">
        <div class="content-wrapper">
          <div class="content">
            {% block content %}
            {% endblock %}
          </div>
          <div class="sidebar">
            {% block sidebar %}
              {{ sidebar }}
            {% endblock %}
          </div>
        </div>
      </div>
      <footer class="main-footer">
        <div class="content-footer">
          <div class="bottom-menu">
            <ul class="b-menu__list">
                {% for item in menu.items %}
                  <li class="b-menu__list__item">
                    <a class="b-menu__list__item__link" href="{{item.url}}">{{item.name}}</a>
                  </li>
                {% endfor %}
            </ul>
          </div>
          <div class="copyright-wrap">
            <div class="copyright-text">Туристик <a href="{{ site.link }}" class="copyright-text__link">loftschool 2016</a></div>
          </div>
        </div>
      </footer>
    </div>
    {{ fn('wp_footer') }}
  </body>
</html>
